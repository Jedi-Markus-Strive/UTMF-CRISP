# unpack_NANOGrav.ipynb
# Automatically extracts all NANOGrav 15yr narrowband .gz files to Datasets_UTMF/
# Run once – creates the folder if it doesn't exist

import os
import gzip
import shutil
from pathlib import Path

# 1. Set paths
repo_root = Path.cwd()                     # root of the repo
target_dir = repo_root / "Datasets_UTMF"   # where everything goes
target_dir.mkdir(existieel_ok=True)

# 2. Find all .gz files that belong to NANOGrav 15yr narrowband data
# (adjust this glob if you store them somewhere else)
gz_files = list(repo_root.rglob("*J*[0-9].tim.par.gz"))   # typical NANOGrav filename pattern
# or if you have them all in one folder:
# gz_files = list((repo_root / "raw_NANOGrav").rglob("*.gz"))

print(f"Found {len(gz_files)} NANOGrav .gz files")

# 3. Extract every .gz → plain .tim.par in Datasets_UTMF/
for gz_path in gz_files:
    # destination filename without .gz
    dest_path = target_dir / gz_path.name.replace(".gz", "")
    
    if dest_path.exists():
        print(f"Already extracted: {dest_path.name}")
        continue
        
    print(f"Extracting {gz_path.name} → {dest_path.name}")
    with gzip.open(gz_path, 'rb') as f_in:
        with open(dest_path, 'wb') as f_out:
            shutil.copyfileobj(f_in, f_out)

print("\nAll NANOGrav files extracted to Datasets_UTMF/")
print("You can now run UTMF_main.ipynb – it will automatically find the .tim.par files there.")
