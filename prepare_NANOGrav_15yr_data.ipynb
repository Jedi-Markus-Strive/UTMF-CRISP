# prepare_NANOGrav_15yr_data.ipynb
# Extracts the official NANOGrav 15-year pulsar timing dataset
# File: NANOGrav15yr_PulsarTiming_v2.1.0.tar.gz → Datasets_UTMF/
# Author: M. Eversdijk
# Run once – fully idempotent

import os
import tarfile
from pathlib import Path
from datetime import datetime

# ------------------------------------------------------------------
# Configuration
repo_root      = Path.cwd()                                      # root of this repo
nanograv_file  = repo_root / "NANOGrav15yr_PulsarTiming_v2.1.0.tar.gz"
target_dir     = repo_root / "Datasets_UTMF"

print(f"[{datetime.utcnow().strftime('%Y-%m-%d %H:%M:%S UTC')}] Starting NANOGrav 15yr data preparation")

# ------------------------------------------------------------------
# 1. Check if the tar.gz file exists
if not nanograv_file.exists():
    raise FileNotFoundError(
        f"File not found: {nanograv_file.name}\n"
        "Please download the official NANOGrav 15-year dataset from\n"
        "https://data.nanograv.org → 'Narrowband Timing Data Release'\n"
        "and place the file NANOGrav15yr_PulsarTiming_v2.1.0.tar.gz in the repo root."
    )

# ------------------------------------------------------------------
# 2. Create target directory
target_dir.mkdir(exist_ok=True)
print(f"Target directory: {target_dir}")

# ------------------------------------------------------------------
# 3. Check if already extracted (look for typical subfolder)
already_extracted = any((target_dir / "par").exists(), (target_dir / "tim").exists(), 
                        len(list(target_dir.glob("*/")))) > 0

if already_extracted:
    print("NANOGrav 15yr data already extracted – nothing to do.")
else:
    print(f"Extracting {nanograv_file.name} → {target_dir}/")
    with tarfile.open(nanograv_file, "r:gz") as tar:
        tar.extractall(path=target_dir)
    print("Extraction completed successfully.")

# ------------------------------------------------------------------
# Final status
extracted_folders = [p.name for p in target_dir.iterdir() if p.is_dir()]
print(f"\nReady! Found {len(extracted_folders)} top-level folders in Datasets_UTMF/")
print("You can now run UTMF_main.ipynb – it will automatically discover all pulsars.")
